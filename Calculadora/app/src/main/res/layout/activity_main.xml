<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"

    >
   <TextView
       android:id="@+id/resultado"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="0.0"
       android:textSize="50sp"
       android:textAlignment="textEnd"
       android:padding="10dp"
       android:background="#d7d7d7"
       android:height="110dp"
       android:layout_marginBottom="10dp"
       >

   </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center"
            android:textAlignment="center"

            >
            <Button
                android:id="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_weight="1"
                android:onClick="calcular"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/b8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_weight="1"
                android:onClick="calcular"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/b9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_weight="1"
                android:onClick="calcular"
                android:textSize="30sp"></Button>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center"
            android:textAlignment="center"

            >
            <Button
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_weight="1"
                android:onClick="calcular"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_weight="1"
                android:onClick="calcular"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_weight="1"
                android:onClick="calcular"
                android:textSize="30sp"></Button>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center"
            android:textAlignment="center"

            >
            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:onClick="calcular"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_weight="1"
                android:onClick="calcular"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_weight="1"
                android:onClick="calcular"
                android:textSize="30sp"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center"
            android:textAlignment="center"

            >
            <Button
                android:id="@+id/bsum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_weight="1"
                android:onClick="calcular"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/bzero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="1"
                android:onClick="calcular"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/brest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_weight="1"
                android:onClick="calcular"
                android:textSize="30sp"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center"
            android:textAlignment="center"

            >
            <Button
                android:id="@+id/bmulti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:onClick="calcular"
                android:layout_weight="1"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/bdiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:onClick="calcular"
                android:layout_weight="1"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/bigual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:onClick="calcular"
                android:layout_weight="1"
                android:textSize="30sp"></Button>

        </LinearLayout>
        <Button
            android:id="@+id/bReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESET"

            android:textSize="25sp"
            >


        </Button>


    </LinearLayout>
</LinearLayout>